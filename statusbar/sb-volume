vol="$(pamixer --get-volume)"
# vol="$(awk -F "[][]" '/Left:/ { $2 - substr($2, 2, lenghth($2) - 1); print $2 }' <(amixer sget Master))"

[ $(pamixer --get-mute) = true ] && printf "ðŸ”‡%3d%s" $vol "%" && exit

