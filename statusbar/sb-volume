#!/bin/sh
#
vol="$(pamixer --get-volume)"

[ $(pamixer --get-mute) = true ] && printf "ğŸ”‡%3d%s" $vol "%" && exit

if [ "$vol" -gt "49" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -eq "0" ]; then
	icon="ğŸ”‡"
elif [ "$vol" -lt "25" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi

printf "%s%3d%s" "$icon" "$vol" "%"
